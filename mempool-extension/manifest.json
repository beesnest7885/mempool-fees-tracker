{
  "manifest_version": 3,
  "name": "BTC Mempool Fee Rate Tracker",
  "description": "Shows BTC fee rates using the mempool.space API.",
  "version": "1.0",
  "permissions": [
    "storage",
    "background",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
